extends ./layout/index.pug 
block content 
    .container.mt-2
        h1.text-center.mb-4 Sistema de impresi√≥n de etiquetas 
        .row
            .col-12.col-lg-3 
                .d-flex.justify-content-center.mb-2 
                    .label__container.p-1.d-flex.flex-column.justify-content-between
                        p.text-center#noSeriePrev
                        .d-flex.justify-content-between
                            p.text-danger#lotePrev
                            p#brandPrev 
                        p.text-center#modelPrev
                        p.font-italic.text-center
                            span#qualityPrev 
                            span#qualityPrev2
                form#formLabels
                    input.form-control.mb-2#noSerie(type="text" placeholder="No Serie" required autocomplete="off")
                    input.form-control.mb-2#lote(type="text" placeholder="Lote" required autocomplete="off")
                    input.form-control.mb-2#brand(type="text" placeholder="Marca" required autocomplete="off")
                    input.form-control.mb-2#model(type="text" placeholder="Modelo" required autocomplete="off" maxlength="16")
                    select.form-control.mb-2#quality(required)
                        option(value="") 
                        option(value="GOLDEN") GOLDEN
                        option(value="WHITE") WHITE
                        option(value="BLACK") BLACK
                        option(value="BLUE") BLUE
                        option(value="PINK") PINK
                        option(value="GREEN") GREEN
                    select.form-control.mb-2#quality2(required)
                        option(value="") 
                        option(value="OLED") OLED
                        option(value="IN-CELL") IN-CELL
                        option(value="ORIGINAL") ORIGINAL
                        option(value="COG") COG
                        option(value="COF") COF
                    input.form-control.mb-2#quantity(type="number" placeholder="Cantidad" min="1" required autocomplete="off") 
                    button.btn.btn-primary.d-block.mx-auto(type="submit") Agregar 
            .col-12.col-lg-9 
                .table-responsive
                    table.table.table-bordered
                        thead
                            tr.text-center
                                th Serie
                                th Lote
                                th Marca
                                th Modelo
                                th Calidad
                                th Cantidad
                                th Borrar
                        tbody#tableBody
                button.btn.btn-primary.d-block.mx-auto#print Generar etiquetas